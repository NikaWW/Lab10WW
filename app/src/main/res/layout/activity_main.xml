<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textAX"
        android:layout_width="60dp"
        android:layout_height="23dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="23dp"
        android:text=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/btnStart"
        android:layout_width="93dp"
        android:layout_height="45dp"
        android:layout_marginStart="153dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="138dp"
        android:onClick="onClickAction"
        android:text="Start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textImie"
        tools:ignore="OnClick" />

    <Button
        android:id="@+id/saveToFile"
        android:layout_width="143dp"
        android:layout_height="57dp"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="0.15"
        android:onClick="onSaveFileClick"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="@string/saveToFileLabel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="OnClick" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="31dp"
        android:layout_height="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="88dp"
        android:text=" aY :"
        app:layout_constraintEnd_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/btnStart" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="31dp"
        android:layout_height="24dp"
        android:layout_marginTop="129dp"
        android:layout_marginEnd="57dp"
        android:text=" aZ :"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textAY"
        android:layout_width="60dp"
        android:layout_height="23dp"
        android:layout_marginStart="71dp"
        android:layout_marginTop="23dp"
        android:text=""
        app:layout_constraintStart_toEndOf="@+id/textAX"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textAZ"
        android:layout_width="60dp"
        android:layout_height="23dp"
        android:layout_marginStart="61dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="40dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textAY"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="30dp"
        android:layout_height="24dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="129dp"
        android:layout_marginEnd="98dp"
        android:text=" aX :"
        app:layout_constraintEnd_toStartOf="@+id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/textImie"
        android:layout_width="98dp"
        android:layout_height="41dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="150dp"
        android:ems="10"
        android:hint="@string/wskazowka_imie"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:maxLines="1"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.142"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textSteps"
        android:layout_width="37dp"
        android:layout_height="26dp"
        android:layout_marginStart="174dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="173dp"
        android:text="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="105dp"
        android:layout_height="24dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="139dp"
        android:text="Liczba krokow :"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textAY" />

    <Button
        android:id="@+id/btnStop"
        android:layout_width="99dp"
        android:layout_height="58dp"
        android:layout_marginStart="49dp"
        android:layout_marginBottom="5dp"
        android:onClick="btnStopClick"
        android:text="@string/btnStop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="OnClick" />

    <LinearLayout
        android:id="@+id/chart"
        android:layout_width="368dp"
        android:layout_height="154dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/btnStop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"></LinearLayout>

</android.support.constraint.ConstraintLayout>